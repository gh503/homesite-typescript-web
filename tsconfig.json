{
    "compilerOptions": {
      "target": "ES6",
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist",
      "rootDir": "./src",
      "baseUrl": "./src",
      "paths": {
        "@components/*": ["components/*"],
        "@services/*": ["services/*"],
        "@utils/*": ["utils/*"]
      }
    },
    "include": ["src/**/*"]
  }
  